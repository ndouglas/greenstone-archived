{
  "name": "greenstone",
  "version": "0.0.1",
  "description": "A simple NES emulator written to be cross-platform and headless with a focus on testing and debugging.",
  "main": "build/index.js",
  "repository": "git@github.com:ndouglas/greenstone.git",
  "author": "Nathan Douglas <github@darkdell.net>",
  "license": "Unlicense",
  "private": false,
  "scripts": {
    "build": "npx tsc",
    "format": "prettier --write .",
    "lint": "eslint",
    "postinstall": "husky install",
    "start": "node dist/index.js",
    "test": "jest --passWithNoTests",
    "test:ci": "jest --ci --coverage --passWithNoTests",
    "test:coverage": "jest --coverage --passWithNoTests",
    "test:debug": "node --inspect-brk ./node_modules/jest/bin/jest.js --runInBand --watch",
    "test:types": "tsc --noEmit",
    "test:watch": "jest --watch --passWithNoTests"
  },
  "devDependencies": {
    "@types/jest": "^27.5.1",
    "@types/node": "^17.0.25",
    "@typescript-eslint/eslint-plugin": "^5.19.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.16.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.4.6",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-testing-library": "^5.3.1",
    "husky": "^8.0.1",
    "jest": "^28.1.0",
    "jest-watch-typeahead": "^1.1.0",
    "lint-staged": "^12.3.7",
    "prettier": "^2.6.2",
    "ts-node": "^10.7.0",
    "typescript": "^4.7.2"
  }
}
